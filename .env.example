# Infoblox WAPI NLP System Configuration
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control!

# ============================================
# REQUIRED CONFIGURATION
# ============================================

# Grid Master IP address (default: 192.168.1.224)
INFOBLOX_GRID_MASTER_IP=192.168.1.224

# Infoblox credentials (defaults provided)
INFOBLOX_USERNAME=admin
INFOBLOX_PASSWORD=infoblox

# WAPI version (default: v2.13.1)
INFOBLOX_WAPI_VERSION=v2.13.1

# ============================================
# OPTIONAL CONFIGURATION
# ============================================

# Service Ports
INFOBLOX_SWAGGER_PORT=8080
INFOBLOX_OPENWEBUI_PORT=3000
INFOBLOX_FLASK_PORT=5000

# Grok AI Configuration (optional - leave empty to disable AI features)
# Get your API key from https://x.ai/api
GROK_API_KEY=
GROK_API_BASE_URL=https://api.x.ai/v1

# Working directory (default: ~/infoblox-wapi-nlp)
INFOBLOX_WORK_DIR=${HOME}/infoblox-wapi-nlp

# ============================================
# SECURITY CONFIGURATION
# ============================================

# SSL certificate verification (true/false)
# Set to true in production with valid certificates
INFOBLOX_SSL_VERIFY=false

# Debug mode (true/false) - enables verbose logging
INFOBLOX_DEBUG=false

# ============================================
# ADVANCED CONFIGURATION (usually not needed)
# ============================================

# Custom CA certificate path (if using self-signed certs)
# INFOBLOX_CA_CERT_PATH=

# Request timeout in seconds
# INFOBLOX_REQUEST_TIMEOUT=30

# Maximum retries for failed requests
# INFOBLOX_MAX_RETRIES=3

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
# INFOBLOX_LOG_LEVEL=INFO